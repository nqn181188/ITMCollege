
@model IEnumerable<ITMCollege.Models.Facility>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Client/_Layout.cshtml";
}

<br>
<br>
<br>
<br>
<br>
<br>
<div class="site-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="course-1-item">
                        <figure class="thumnail">
                            <a href="#"><img width="340" height="200" src="~/@item.Image" alt="Image"></a>
                            <div class="category"><h3>@item.FacilityName</h3></div>
                        </figure>
                        
                    </div>
                </div>
            }

        </div>
    </div>
</div>


