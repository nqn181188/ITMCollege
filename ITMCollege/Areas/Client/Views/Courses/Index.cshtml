                                <span class="icon-star2 text-warning"></span>
                                <span class="icon-star2 text-warning"></span>
                                <span class="icon-star2 text-warning"></span>
                            </div>*@
                            <div class="desc mb-4">@item.Description</div>
                            <p><a href="/courses/details/@item.CourseId" class="btn btn-primary rounded-0 px-4">Course details</a></p>
                        </div>
