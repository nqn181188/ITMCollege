@model ITMCollege.Models.Faculty

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Faculty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FacultyId" />
            <input type="hidden" asp-for="Image" />
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <input asp-for="FacultyId" class="form-control" />
                <span asp-validation-for="FacultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FalcultyName" class="control-label"></label>
                <input asp-for="FalcultyName" class="form-control" />
                <span asp-validation-for="FalcultyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dob" class="control-label"></label>
                <input asp-for="Dob" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Degree" class="control-label"></label>
                @*<input asp-for="Degree" class="form-control" />*@
                 <select asp-for="Degree" name="Degree">
                    <option  value="Master" >Master</option>
                    <option  value="Advisor" >Advisor</option>
                </select>
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepId" class="control-label"></label>
                @*<input asp-for="DepId" class="form-control" />*@
                <select asp-for="DepId" name="DepId">
                    @foreach(var item in @ViewBag.ListDep)
                    {
                        <option class="list list-danger" value="@item.DepId">@item.DepName</option>
                    }
                </select>
                <span asp-validation-for="DepId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" for="file-upload" style="cursor: pointer" class="control-label btn btn-outline-dark">
                </label>
                <input type="file" id="file-upload" name="file" class="custom-file-input" />
                <img src="~/@Model.Image" alt="Alternate Text" width="200" height="200" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
